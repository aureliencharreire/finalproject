
<div class="login">
<div class="login-triangle"></div>
<h2 class="login-header">Update User</h2>

<%= form_for @user, url: edit_user_path(@user), html: { method: :put } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="login-container">
    <%= f.email_field :email, placeholder:"Email", autofocus: true %>

    <%= f.password_field :password, placeholder:"Nouveau mot de passe", autocomplete: "off" %>

    <%= f.password_field :password_confirmation, placeholder:"Confirmation du mot de passe", autocomplete: "off" %>

    <h4>Statut administrateur ? <%= f.check_box :admin %> </h4>
    <br>

    <%= f.submit "Update" %>
  </div>
<% end %>
</div>
<br>
