
<div class="bloc bgc-isabelline l-bloc" id="bloc-2">
<div class="container bloc-sm">
    <div class="row">
    <div class="col-sm-12">
        <%= form_tag({controller: "searches", action: "create", method: "post"}, {class: "form-inline"}) do %>
          <div class="form-group">
            <%= collection_select :department, :department, Department.order(:name), :id, :name, include_blank: 'departement', class:"form-control" %>
          </div>
          <div class="form-group">
            <%= text_field_tag 'search[city]', "Ville", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= number_field_tag 'search[price]', "Price", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= select_tag :typo, options_for_select(['Studio', '2 pièces', '3 pièces', '4 pièces', '5 pièces', '6 pièces et plus']), class:"form-control" %>
          </div>
          <div class="form-group">
            <%= submit_tag "rechercher", class:"bloc-button btn   btn-block btn-sq btn-white"  %>
          </div>
        <% end %>
    </div>
    </div>
</div>
</div>


<div class="row">
    <div class="col-sm-4">
        <%= form_tag(controller: "newsletters", action: "create", method: "post") do %>
        <h1>Newsletter</h1>
        <div class="form-group">
            <%= text_field_tag 'newsletter[email]', "Email", class:"form-control" %>
        </div>
            <%= submit_tag "Souscrire", class:"bloc-button"  %>
        <% end %>
    </div>
</div>

<div class="row">
    <div class="col-sm-4" >
        <% f = form_tag(controller: "callbacks", action: "create", method: "post") do %>
        <h1>Etre rappelé</h1>
        <div class="form-group">
            <%= select_tag 'callback[civilite]', options_for_select(['Monsieur', 'Madame']), class:"form-control" %>
        </div>
        <div class="form-group">
            <%= text_field_tag 'callback[nom]', "Nom", class:"form-control" %>
        </div>
        <div class="form-group">
            <%= text_field_tag 'callback[prenom]', "Prenom", class:"form-control" %>
        </div>
        <div class="form-group">
            <%= number_field_tag 'callback[phone]', "Phone", class:"form-control" %>
        </div>
        <div class="form-group">
            <%= text_field_tag 'callback[email]', "Email", class:"form-control" %>
        </div>
        <div class="form-group">
            <%= time_field_tag 'callback[time]', "Heure", class:"form-control" %>
        </div>
        <%= submit_tag "Être rappelé", class:"bloc-button"  %>
        <% end %>
    </div>
</div>

<%= content_tag :a, "Être rappelé", href: "#modal", class: 'btn', data: {toggle: 'modal'} %>

<%= modal_dialog id: "modal",
         header: { show_close: true, dismiss: 'modal' },
         body:   { content: f },
         footer: { content: content_tag(:button, 'Save', class: 'btn') } %>
