
<div class="login">
<div class="login-triangle"></div>
<h2 class="login-header">Sign Up</h2>




<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="login-container">
    <%= f.email_field :email, placeholder:"Email", autofocus: true %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder:"Mot de passe", autocomplete: "off" %>
    <%= f.password_field :password_confirmation, placeholder:"Confirmation du mot de passe", autocomplete: "off" %>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>
