
<div class="login">
<div class="login-triangle"></div>
<h2 class="login-header"> MODIFIER LE PROGRAM</h2>

<%= form_for(@program) do |f| %>
  <% if @program.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:</h2>

      <ul>
      <% @program.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :region %><br>
    <%= f.collection_select :region_id, Region.all, :id, :name, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :department %><br>
    <%= f.collection_select :department_id, Department.all, :id, :name, class:"form-control" %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :adress %><br>
    <%= f.text_field :adress %>
  </div>
  <div class="field">
    <%= f.label :delivery %><br>
    <%= f.date_select :delivery %>
  </div>
  <div class="field">
    <%= f.label :bref %><br>
    <%= f.text_area :bref %>
  </div>
  <div class="field">
    <%= f.label :strongpoints %><br>
    <%= f.text_area :strongpoints %>
  </div>
  <div class="field">
    <%= f.label :citydesc %><br>
    <%= f.text_area :citydesc %>
  </div>
  <div class="field">
    <%= f.label :areadesc %><br>
    <%= f.text_area :areadesc %>
  </div>
  <div class="field">
    <%= f.label :proximity %><br>
    <%= f.text_area :proximity %>
  </div>
  <div class="field">
    <%= f.label :tva %><br>
    <%= f.select :tva, [["5,5%", 5.5], ["7%", 7], ["20%", 20]] %>
  </div>
  <div class="field">
    <%= f.label :immediatDelivery %><br>
    <%= f.check_box :immediatDelivery %>
  </div>
  <div class="field">
    <%= f.label :new %><br>
    <%= f.check_box :new %>
  </div>
  <div class="field">
    <%= f.label :pricedisplay %><br>
    <%= f.select :pricedisplay, [["complet", :complet], ["partiel", :partiel], ["aucun", :aucun]] %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>


<%= link_to 'Show', @program %> |
<%= link_to 'Back', programs_path %>
