<p id="notice"><%= notice %></p>

<h1>Listing Programs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Region</th>
      <th>Departement</th>
      <th>name</th>
      <th>City</th>
      <th>Tva</th>
      <th>Pricedisplay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.region.name %></td>
        <td><%= program.department.name %> <%= program.department.code %></td>
        <td><%= program.name %></td>
        <td><%= program.city %></td>
        <td><%= program.tva %></td>
        <td><%= program.pricedisplay %></td>
        <td><%= link_to 'Show', program %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Program', new_program_path, class:"btn   btn-lg btn-sq btn-light-slate-gray" %>
